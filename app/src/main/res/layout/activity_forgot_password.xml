<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    tools:context=".RegActivity">

    <TextView
        android:id="@+id/header_title_fp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/actay_regular"
        android:text="Восстановление пароля"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewLoginFp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:fontFamily="@font/actay_regular"
            android:text="E-mail"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/email_fp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:autofillHints="AUTOFILL_HINT_NEW_USERNAME"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:importantForAutofill="yes"
            android:inputType="textEmailAddress"
            android:paddingStart="5dp"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#CBE857"
        android:fontFamily="@font/actay_regular"
        android:text="Отправить код"
        android:textAllCaps="false"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/forgot_and_remembered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/actay_regular"
        android:text="Авторизация"
        android:textColor="@color/white"
        android:textSize="17sp" />

</LinearLayout>